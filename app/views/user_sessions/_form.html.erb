<%= form_tag user_sessions_path, :method => :post, :class => "ajax-form" do %>
  <div class="field" validate="email">
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>
  <div class="field" validate="password">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>
